<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StartFragment">

    <TextView
        android:id="@+id/response"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/cityToFind"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/cityToFind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/findCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="find Weather"
        app:layout_constraintTop_toBottomOf="@id/cityToFind"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"/>

    <Button
        android:id="@+id/getFromDb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get WeatherFromDb"
        app:layout_constraintTop_toBottomOf="@id/findCity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>